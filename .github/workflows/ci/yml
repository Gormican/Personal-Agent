name: CI â€” smoke test

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  smoke:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"
          cache: "pip"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Start API (background)
        run: |
          nohup python -m uvicorn app.main:app --host 127.0.0.1 --port 8000 >/dev/null 2>&1 &
          echo $! > uvicorn.pid

      - name: Wait for API & basic check
        shell: bash
        run: |
          for i in {1..30}; do
            if curl -sf http://127.0.0.1:8000/morning >/dev/null; then
              echo "API is up"; break
            fi
            sleep 1
          done
          curl -sSf http://127.0.0.1:8000/morning | python - <<'PY'
import sys, json
data = json.loads(sys.stdin.read())
required = ["schedule","free_blocks","weather","headlines","top3_priorities"]
missing = [k for k in required if k not in data]
assert not missing, f"Missing keys: {missing}"
print("Payload OK:", {k:type(data[k]).__name__ for k in required})
PY

      - name: Stop API
        if: always()
        run: |
          pkill -f "uvicorn app.main:app" || true
